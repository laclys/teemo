.spinner {
  position: relative;
  width: 40rpx;
  height: 40rpx;
}

.double-bounce1,
.double-bounce2 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #3063b2;
  opacity: .6;
  animation: bounce 2s infinite ease-in-out;
}

.double-bounce2 {
  animation-delay: -1.0s;
}

@keyframes bounce {

  0%,
  100% {
    transform: scale(0.0)
  }

  50% {
    transform: scale(1.0)
  }
}