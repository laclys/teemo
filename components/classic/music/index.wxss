 .container {
   display: flex;
   flex-direction: column;
   align-items: center;
 }

 .classic-img {
   margin-top: 60rpx;
   width: 422rpx;
   height: 422rpx;
   border-radius: 50%;
 }

 .player-img {
   position: relative;
   bottom: 270rpx;
   width: 120rpx;
   height: 120rpx;
 }

 .tag {
   position: relative;
   bottom: 160rpx;
   right: 310rpx;
   width: 44rpx;
   height: 128rpx;
 }

 .rotation {
  animation: rotation 12s linear infinite;
  -moz-animation: rotation 12s linear infinite;
  -webkit-animation: rotation 12s linear infinite;
  -o-animation: rotation 12s linear infinite;
}

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}